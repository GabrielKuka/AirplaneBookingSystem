@model AirplaneBookingSystem.Models.UserFlights

<h1>Success!</h1>

<div class="border-success">
    You have successfully booked this flight.
</div>

<div>
    <h3>Booking details:</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.FlightNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>

    <a class="btn btn-outline-success" asp-action="SeatSelect" asp-route-id="@Model.FlightId">Go to Seat Selection</a>
</div>